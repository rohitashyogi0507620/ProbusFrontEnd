<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnflat"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_startmodule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Design Library"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--    Radio Group and Radio button-->

                <in.probusinsurance.probusdesign.ui.textview.TextViewLargeHeading
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is Large Heading style"
                    app:customColor="@color/colorPrimary"
                    app:customColorEnable="true" />

                <in.probusinsurance.probusdesign.ui.textview.TextViewSubHeadingLight
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is Sub Heading with light color style"
                    app:customColor="@color/colorsuccess"
                    app:customColorEnable="true" />

                <in.probusinsurance.probusdesign.ui.textview.TextViewSmallHeading
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Is Small Heading Style"
                    app:customColor="@color/colorsuccess"
                    app:customColorEnable="true" />

                <in.probusinsurance.probusdesign.ui.textview.TextViewSubHeadingLarge
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Is  Sub Heading Large Style"
                    app:customColor="@color/colorsuccess"
                    app:customColorEnable="true" />

                <in.probusinsurance.probusdesign.ui.textview.TextViewSubHeadingSmall
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Is  Sub Heading Small Style"
                    app:customColor="@color/colorPrimary"
                    app:customColorEnable="true" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/male"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <in.probusinsurance.probusdesign.ui.radiobutton.RadioButtonGender
                        android:id="@+id/male"
                        style="@style/RadioButton_Gender_Style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:text="Male"></in.probusinsurance.probusdesign.ui.radiobutton.RadioButtonGender>

                    <in.probusinsurance.probusdesign.ui.radiobutton.RadioButtonGender
                        style="@style/RadioButton_Gender_Style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_marginRight="@dimen/margin_5dp"
                        android:layout_weight="1"
                        android:text="Female"></in.probusinsurance.probusdesign.ui.radiobutton.RadioButtonGender>

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <in.probusinsurance.probusdesign.ui.chip.ChipGroupSingleSelection
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <in.probusinsurance.probusdesign.ui.chip.SingleChip
                            style="@style/Chip_Single_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jaipur"></in.probusinsurance.probusdesign.ui.chip.SingleChip>

                        <in.probusinsurance.probusdesign.ui.chip.SingleChip
                            style="@style/Chip_Single_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hyderabad">

                        </in.probusinsurance.probusdesign.ui.chip.SingleChip>

                        <in.probusinsurance.probusdesign.ui.chip.SingleChip
                            style="@style/Chip_Single_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gurgaon">

                        </in.probusinsurance.probusdesign.ui.chip.SingleChip>

                        <in.probusinsurance.probusdesign.ui.chip.SingleChip
                            style="@style/Chip_Single_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dehli">

                        </in.probusinsurance.probusdesign.ui.chip.SingleChip>

                        <in.probusinsurance.probusdesign.ui.chip.SingleChip
                            style="@style/Chip_Single_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gurgaon">

                        </in.probusinsurance.probusdesign.ui.chip.SingleChip>


                    </in.probusinsurance.probusdesign.ui.chip.ChipGroupSingleSelection>

                </LinearLayout>


                <in.probusinsurance.probusdesign.ui.switchbutton.SwitchButton
                    style="@style/SwitchButton_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"></in.probusinsurance.probusdesign.ui.switchbutton.SwitchButton>


                <in.probusinsurance.probusdesign.ui.edittext.EditTextInput
                    android:id="@+id/il_txt"
                    style="@style/EditText_Style_Outline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <in.probusinsurance.probusdesign.ui.edittext.EmailEditText
                        android:id="@+id/et_txt"
                        style="@style/EditText_Style_Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Email"></in.probusinsurance.probusdesign.ui.edittext.EmailEditText>
                </in.probusinsurance.probusdesign.ui.edittext.EditTextInput>


                <in.probusinsurance.probusdesign.ui.layout.CheckableLinearLayout
                    style="@style/Checkable_LinearLayout_Doted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <in.probusinsurance.probusdesign.ui.checkbox.SingleCheckBox
                        style="@style/CheckBox_Single_DotRound_No_Margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true" />

                    <in.probusinsurance.probusdesign.ui.checkbox.SingleCheckBox
                        style="@style/CheckBox_Single_Round_Margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"

                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_5dp"
                            app:srcCompat="@drawable/icici" />

                        <in.probusinsurance.probusdesign.ui.textview.TextViewSubHeadingLarge
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="iProtect Smart" />

                        <in.probusinsurance.probusdesign.ui.textview.TextViewLargeHeading
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="25000/- Monthly"

                            />

                    </LinearLayout>


                </in.probusinsurance.probusdesign.ui.layout.CheckableLinearLayout>


                <in.probusinsurance.probusdesign.ui.layout.CheckableLinearLayout
                    style="@style/Checkable_LinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <in.probusinsurance.probusdesign.ui.checkbox.SingleCheckBox
                        style="@style/CheckBox_Single_Round_Margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="false" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/margin_5dp"
                        app:srcCompat="@drawable/icici" />

                    <in.probusinsurance.probusdesign.ui.textview.TextViewMediumHeading
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:gravity="center"
                        android:text="ICICI " />


                </in.probusinsurance.probusdesign.ui.layout.CheckableLinearLayout>


                <in.probusinsurance.probusdesign.ui.button.BackButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"></in.probusinsurance.probusdesign.ui.button.BackButton>

                <in.probusinsurance.probusdesign.ui.checkbox.SingleCheckBox
                    style="@style/CheckBox_Single_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_back"
                    android:text="Cover against 19 critical illnesses"></in.probusinsurance.probusdesign.ui.checkbox.SingleCheckBox>

                <in.probusinsurance.probusdesign.ui.checkbox.SingleCheckBox
                    style="@style/CheckBox_Single_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cover against 19 critical illnesses"></in.probusinsurance.probusdesign.ui.checkbox.SingleCheckBox>

                <LinearLayout
                    android:id="@+id/ll_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <in.probusinsurance.probusdesign.ui.button.ButtonRound
                    android:id="@+id/btnround"
                    style="@style/Button_Round_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    app:isactive="true"></in.probusinsurance.probusdesign.ui.button.ButtonRound>

                <in.probusinsurance.probusdesign.ui.button.ButtonOutline
                    style="@style/Button_Outline_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    android:text="Download Brochure"
                    app:icon="@drawable/ic_password_missmatch"></in.probusinsurance.probusdesign.ui.button.ButtonOutline>

                <in.probusinsurance.probusdesign.ui.LottieAnimation
                    android:id="@+id/animation_view"
                    android:layout_width="@dimen/alert_icon_size"
                    android:layout_height="@dimen/alert_icon_size"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/info" />

                <in.probusinsurance.probusdesign.ui.edittext.EditTextInput
                    style="@style/EditText_Style_Outline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <in.probusinsurance.probusdesign.ui.autocomplete.AutoComplete
                        android:id="@+id/autocomplete_text"
                        style="@style/AutoComplete_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="RTO City"></in.probusinsurance.probusdesign.ui.autocomplete.AutoComplete>
                </in.probusinsurance.probusdesign.ui.edittext.EditTextInput>


                <in.probusinsurance.probusdesign.ui.edittext.EditTextInput
                    android:id="@+id/editext_inputlayout"
                    style="@style/EditText_Style_Outline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <in.probusinsurance.probusdesign.ui.edittext.EmailEditText
                        style="@style/EditText_Style_Normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Id *"></in.probusinsurance.probusdesign.ui.edittext.EmailEditText>

                </in.probusinsurance.probusdesign.ui.edittext.EditTextInput>

                <in.probusinsurance.probusdesign.ui.spinner.Spinner
                    android:id="@+id/spinner"
                    style="@style/Spinner_Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </in.probusinsurance.probusdesign.ui.spinner.Spinner>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <in.probusinsurance.probusdesign.ui.button.ButtonFlat
        android:id="@+id/btnflat"
        style="@style/Button_Flat_Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Next"
        app:isactiveflatbutton="true"></in.probusinsurance.probusdesign.ui.button.ButtonFlat>

</RelativeLayout>