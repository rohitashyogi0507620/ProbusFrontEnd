<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Button_Round_Style" parent="Widget.Material3.Button">
        <item name="android:padding">@dimen/button_padding_12dp</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="cornerRadius">@dimen/button_corner_8dp</item>
        <item name="android:textSize">@dimen/button_textsize_14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_Color_TextActive</item>
        <item name="android:backgroundTint">@color/button_Color_Background_Active</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="Button_Flat_Style" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/button_padding_12dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">@dimen/button_textsize_14sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/button_Color_TextActive</item>
        <item name="android:backgroundTint">@color/button_Color_Background_Active</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="Button_Outline_Style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/button_corner_8dp</item>
        <item name="cornerRadius">@dimen/button_corner_8dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/border_1dp</item>
        <item name="android:textSize">@dimen/text_Subheading_Small_Size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button_Text_Style" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/button_corner_8dp</item>
        <item name="cornerRadius">@dimen/button_corner_8dp</item>
        <item name="android:textSize">@dimen/text_Subheading_Small_Size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--    TextView Styles-->
    <style name="TextView_HeadingLarge_Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_Heading_Large_Size</item>
        <item name="android:textColor">@color/text_Color_Heading_Large</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="hintTextColor">@color/text_Color_Heading_Large</item>
    </style>

    <style name="TextView_HeadingMedium_Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_Heading_Medium_Size</item>
        <item name="android:textColor">@color/text_Color_SubHeading_Large</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="hintTextColor">@color/text_Color_SubHeading_Large</item>
    </style>


    <style name="TextView_HeadingSmall_Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_Heading_Small_Size</item>
        <item name="android:textColor">@color/text_Color_Heading_Small</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="hintTextColor">@color/text_Color_Heading_Small</item>
    </style>

    <style name="TextView_SubHeadingLarge_Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_SubHeading_Large_Size</item>
        <item name="android:textColor">@color/text_Color_SubHeading_Large</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="hintTextColor">@color/text_Color_SubHeading_Large</item>
    </style>

    <style name="TextView_ReviewHeadingData_Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_SubHeading_Large_Size</item>
        <item name="android:textColor">@color/text_Color_SubHeading_Large</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="hintTextColor">@color/text_Color_SubHeading_Large</item>
        <item name="android:layout_marginTop">@dimen/margin_5dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_5dp</item>
        <item name="maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TextView_ReviewHeading_Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_SubHeading_Large_Size</item>
        <item name="android:textColor">@color/text_Color_SubHeading_Light</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="hintTextColor">@color/text_Color_SubHeading_Light</item>
        <item name="android:layout_marginTop">@dimen/margin_5dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_5dp</item>
        <item name="android:gravity">left</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextView_SubHeadingSmall_Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_Subheading_Small_Size</item>
        <item name="android:textColor">@color/text_Color_SubHeading_Small</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="hintTextColor">@color/text_Color_SubHeading_Small</item>
    </style>

    <style name="TextView_SubHeadingLight_Style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_Subheading_Light_Size</item>
        <item name="android:textColor">@color/text_Color_SubHeading_Light</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="hintTextColor">@color/text_Color_SubHeading_Light</item>
    </style>


    <style name="RadioButton_Gender_Style" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="android:background">@drawable/radiobutton_background</item>
        <item name="buttonTint">@color/radiobutton_color</item>
        <item name="android:paddingEnd">@dimen/margin_10dp</item>
        <item name="android:paddingStart">@dimen/margin_10dp</item>
        <item name="android:paddingTop">@dimen/margin_12dp</item>
        <item name="android:paddingBottom">@dimen/margin_12dp</item>
        <item name="android:textColor">@color/radiobutton_textcolor</item>
        <item name="android:button">@drawable/radiobutton_insert</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/radiobutton_text_size</item>

    </style>

    <style name="Chip_Single_Style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor" tools:ignore="DuplicateDefinition">@color/chip_stroke_color
        </item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeWidth">@dimen/border_1dp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/chip_text_size</item>
        <item name="android:layout_marginRight">@dimen/margin_12dp</item>
        <item name="chipCornerRadius">@dimen/chip_corner_40dp</item>

    </style>

    <style name="CheckBox_Single_Style" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@drawable/radiobutton_background</item>
        <item name="buttonTint">@color/radiobutton_color</item>
        <item name="android:textColor">@color/radiobutton_textcolor</item>
        <item name="android:button">@drawable/check_button_insert</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/radiobutton_text_size</item>
        <item name="android:paddingEnd">@dimen/margin_10dp</item>
        <item name="android:paddingStart">@dimen/margin_10dp</item>
        <item name="android:paddingTop">@dimen/margin_15dp</item>
        <item name="android:paddingBottom">@dimen/margin_15dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_15dp</item>
        <item name="android:layout_marginRight">@dimen/margin_15dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_15dp</item>
    </style>

    <style name="CheckBox_Single_Style_No_Margin" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@drawable/radiobutton_background</item>
        <item name="buttonTint">@color/radiobutton_color</item>
        <item name="android:textColor">@color/radiobutton_textcolor</item>
        <item name="android:button">@drawable/check_button_insert</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/radiobutton_text_size</item>
        <item name="android:paddingEnd">@dimen/margin_10dp</item>
        <item name="android:paddingStart">@dimen/margin_10dp</item>
        <item name="android:paddingTop">@dimen/margin_15dp</item>
        <item name="android:paddingBottom">@dimen/margin_15dp</item>

    </style>


    <style name="SwitchButton_Style">
        <item name="android:thumb">@drawable/switchcustom_thumb</item>
        <item name="track">@drawable/switchcustom_track</item>
        <item name="android:showText">false</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="EditText_Style_Normal" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/margin_15dp</item>
        <item name="cornerRadius">@dimen/button_corner_8dp</item>
        <item name="android:textColor">@color/text_Color_EditText</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/editext_txt_size</item>
    </style>

    <style name="AutoComplete_Style" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/margin_15dp</item>
        <item name="cornerRadius">@dimen/button_corner_8dp</item>
        <item name="android:textColor">@color/text_Color_EditText</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/editext_txt_size</item>
    </style>

    <style name="EditText_Style_Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/TextInputLayout_Rounded</item>
        <item name="boxStrokeWidth">@dimen/border_1dp</item>
        <item name="boxStrokeColor">@color/color_editext_border</item>
        <item name="boxStrokeErrorColor">@color/color_inputlayout_error</item>
        <item name="boxStrokeWidthFocused">@dimen/border_2dp</item>
        <item name="hintTextColor">@color/hint_Color_EditText</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>

    </style>

    <style name="Spinner_Style">
        <item name="android:layout_margin">@dimen/margin_15dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="TextInputLayout_Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/button_corner_8dp</item>
    </style>




    <dimen name="text_Subheading_Light_Size">14sp</dimen>
    <dimen name="editext_txt_size">16sp</dimen>
    <dimen name="button_corner_16dp">16dp</dimen>
    <dimen name="margin_14dp">14dp</dimen>
    <dimen name="text_Heading_Medium_Size">16sp</dimen>
