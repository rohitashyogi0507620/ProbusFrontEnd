<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_20dp" />
            <solid android:color="@color/switch_off_color" />
            <stroke android:color="@color/switch_off_color"
                android:width="@dimen/border_1dp"/>
            <size android:width="@dimen/switch_button_tracksize"
                android:height="@dimen/switch_button_tracksize"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_20dp" />
            <solid android:color="@color/colorPrimary" />
            <stroke android:color="@color/colorPrimary"
                android:width="@dimen/border_1dp"/>
            <size android:width="@dimen/switch_button_tracksize"
                android:height="@dimen/switch_button_tracksize"/>
        </shape>
    </item>
</selector>